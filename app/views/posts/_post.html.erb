<%- model_class = Post -%>

<div class="page-header">
  <h1><%= link_to t('.show', :default => @post.clean_title.titleize),
                      post_path(@post), :class => 'title' %></h1>
</div>

<div class='container'>
	<div class='row'>
	  <div class="col-sm-2">
		  <strong>By 
		  <%= @post.author %></strong>
	  </div>

	  <div class="col-sm-3">
		  <%= @post.updated_at.strftime("%a %b %d, %Y") %>
	  </div>
	</div>

	<div class='row'>
	  <div class="col-sm-8">
  
  			<%= @post.content %></dd>

		  <strong><%= model_class.human_attribute_name(:ref_source) %>:</strong>
  <%= @post.ref_source %>
	  </div>
	 </div>
</div>

</dl>

